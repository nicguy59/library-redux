  <% if @item.errors.any? %>

    <div class='errors'>
      <h2>Uh oh, errors!</h2>
        <% @item.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
        <% end %>
    </div>
  <% end %>

<%= form_for ([@item_type, @item]) do |f| %>

  <div class='field'>
    <!--<%= f.label :item_type, class: 'lable' %>        <!-- Don't need this, as we have driven  
    <!--<%= f.label :item_type, 'What type of item is this?' %>  it to a specific item type. --> 
    <!--<%= f.collection_select :item_type_id, ItemType.all, :id, :name %> -->
    <p>This is going to be a <%= @item_type.name %></p>
  </div>

  <div class='field'>
    <%= f.label :title, class: 'lable' %>
    <%= f.text_field :title %>
  </div>

  <div class='field'>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class='field'>
    <%= f.label :completed_on, 'Completed On: ' %>
    <%= f.date_select :completed_on, include_blank: true %>
  </div>


  <div class='field'>
    <%= f.submit 'Save' %>
  </div>

<% end %>
